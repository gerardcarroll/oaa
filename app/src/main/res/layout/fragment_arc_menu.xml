<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp">

    <FrameLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/scrim"
        android:visibility="invisible"
        android:clickable="true"
        >

        <com.ogaclejapan.arclayout.ArcLayout
            android:id="@+id/arc_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            app:arc_axisRadius="@dimen/layout_child_offset_path"
            app:arc_freeAngle="true"
            app:arc_origin="bottom"
            app:arc_radius="@dimen/layout_radius_path"
            >

            <Button
                style="@style/itemPath"
                android:text="A"
                android:textColor="@color/path_orange"
                app:arc_angle="30"
                />

            <!--<Button-->
                <!--style="@style/itemPath"-->
                <!--android:text="B"-->
                <!--android:textColor="@color/path_blue"-->
                <!--app:arc_angle="60"-->
                <!--/>-->

            <Button
                style="@style/itemPath"
                android:text="C"
                android:textColor="@color/path_black"
                app:arc_angle="90"
                />

            <!--<Button-->
                <!--style="@style/itemPath"-->
                <!--android:text="D"-->
                <!--android:textColor="@color/path_green"-->
                <!--app:arc_angle="120"-->
                <!--/>-->

            <Button
                style="@style/itemPath"
                android:text="E"
                android:textColor="@color/path_purple"
                app:arc_angle="150"
                />

        </com.ogaclejapan.arclayout.ArcLayout>

    </FrameLayout>

    <Button
        android:id="@+id/fab"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/arc_menu_fab"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="24sp"
        />

</RelativeLayout>