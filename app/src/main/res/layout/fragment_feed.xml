<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.overstock.android.prototype.fragment.FeedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        tools:context="com.overstock.android.prototype.YourInterestsActivity">

        <TextView
            android:id="@+id/feed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/feed_fragment"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            style="@style/TextAppearance.AppCompat.Title" />

        <Button
            android:id="@+id/feed_nfl_btn"
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:text="@string/nfl_link"
            android:layout_gravity="center"
            android:autoLink="all"/>

        <Button
            android:id="@+id/feed_communities_btn"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/communities_link"
            android:layout_gravity="center"
            android:autoLink="all" />

    </LinearLayout>

</FrameLayout>
