<resources>

    <!-- Base application theme. This theme applies styles to all of our app content
         apart from any overridden styles in the v21 resource file-->
    <style name="OappTheme" parent="OappTheme.Base" />

    <style name="OappTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Oapp , app wide color style. -->
        <item name="colorPrimary">@color/oapp_primary_500</item>
        <item name="colorPrimaryDark">@color/oapp_primary_dark_700</item>
        <item name="colorAccent">@color/oapp_accent_a200</item>
        <item name="android:buttonStyle">@style/OappButton</item>

    </style>

    <style name="OappTextView">
        <item name="android:background">@color/oapp_accent_a200</item>
    </style>

    <style name="OappButton">
        <item name="android:background">@drawable/oapp_button</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- This theme gives our AppBarLayout the Dark action bar theme (white text)-->
    <style name="OappActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CheckBoxTheme" parent="Theme.AppCompat" />

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="OappTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="OappTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
